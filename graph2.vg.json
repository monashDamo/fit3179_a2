{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A ranged dot plot that uses 'layer' to convey changing life expectancy for the five most populous countries (between 1955 and 2000).",
    "data": {"url": "Files/powerStationsCloseRearrangedThinned.csv"},
    "width":500,
    "config": {"style": {"cell":{"stroke":"transparent"}}},
    "title": {"text":"Commercial start and expected closure dates of power plants over capacity (MW) over year","fontSize":14},
    "background":"transparent",
    "transform": [
        
        {
          "calculate": "toNumber(datum.specificYear)", "as": "intYear"
        },
        {
          "filter": {"field": "specificYear", "range": [2000, 2080]}
        },
        {
          "filter": "datum.Nameplate_Capacity > 200"
        }
    ],
    
    "encoding": {
      "x": {
        "field": "specificYear",
        "type": "quantitative",
        "scale": {"domain": [2000,2080]},
        "title":"Year"
      },
      "y": {
        "field": "Nameplate_Capacity",
        "type": "quantitative",
        "title": "Capacity (PJ)",
        "scale": {"domain": [150,1000]}
      },
      "tooltip": [
          {"field": "Nameplate_Capacity", "type": "nominal", "title": "Nameplate Capacity (PJ)"},
          {"field": " Site Name ", "type": "nominal", "title": "Site Name"},
          {"field": "specificYear", "type": "nominal", "title": "Year"},
          {"field": "variable", "type": "nominal", "title": "Year type?"}
      ]
    },
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "detail": {
            "field": "Nameplate_Capacity",
            "type": "quantitative"
          },
          "color": {"field":"Fuel_Bucket_Summary"},
          "opacity":{"value":0.4}
        }
      },
      {
        "mark": {
          "type": "point",
          "filled": true
        },
        "encoding": {
          "color": {
            "field": "Fuel_Bucket_Summary",
            "type": "nominal",
            "title": "Fuel Type"
          },
          "size": {"value": 50},
          "opacity": {"value": 1}
        }
      },
      {
        "mark": { "type": "line", "color": "#37e0cf", "size": 3},
        "encoding": {
          "x": {
            "datum": 2050
          }
        }
      }
    ]
  }
  